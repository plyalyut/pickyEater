<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pickyeater.pickyeaterandroid.MainMenu"
    android:icon="@mipmap/fork"
    android:label="@string/app_name"
    >
    <!--android:background="#202020"-->

    <!--android:layout_below="@+id/secondRes"
        android:paddingLeft="40px"
        android:layout_alignParentLeft="true"
         />-->

    <!--
            android:layout_toEndOf="@id/resIm"
            android:layout_toRightOf="@id/resIm"
            android:layout_below="@id/secondRes"

            android:layout_alignParentRight="true"
            android:paddingRight="40px"-->


    <!--android:layout_marginRight="-20dp"/-->


    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="@dimen/imagesize"
        android:layout_height="@dimen/imagesize"
        android:id="@+id/reroll"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        />


    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="@dimen/imagesize"
        android:layout_height="@dimen/imagesize"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:id="@+id/resIm"
        android:foregroundGravity="center"
        android:layout_above="@+id/firstRes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        />


    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/firstRes"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:layout_above="@+id/reroll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/secondRes"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:layout_above="@+id/reroll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="@dimen/imagesize"
        android:layout_height="@dimen/imagesize"
        android:id="@+id/resIm2"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:layout_above="@+id/secondRes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"

        />


    <!--android:layout_below="@id/resIm"
    android:text="ResEt"-->


</RelativeLayout>

